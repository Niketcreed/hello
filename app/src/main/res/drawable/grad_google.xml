<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- solids that simulate shadow !-->
    <item>
        <shape>
            <corners android:radius="6dp" />
            <solid android:color="#09F85547" />
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
        </shape>
    </item>


    <item>
        <shape>

            <corners android:radius="6dp" />
            <gradient
                android:angle="-90"
                android:endColor="#f85547"
                android:startColor="#e94335" />

        </shape>
    </item>


</layer-list>


